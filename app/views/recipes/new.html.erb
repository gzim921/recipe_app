<%= form_with model: @recipe, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'Title' %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: 'Description' %>

  <%= f.submit 'Submit' %>
<% end %>