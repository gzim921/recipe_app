<div class="container is-fluid">
  <div class="columns">
    <div class="column is-8 is-offset-2">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            <%= recipe.title %>
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <%= recipe.description %>
          </div>
        </div>
        <% if local_assigns[:show] %>
          <footer class="card-footer">
            <%= link_to "Back", root_path, class: "card-footer-item" %>
          </footer>
          <% if current_user %>
            <footer class="card-footer">
              <%= link_to "Delete", recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail recipe?'}, class: "card-footer-item" %>
            </footer>
            <footer class="card-footer">
              <%= link_to "Edit Recipe", edit_recipe_path, class: "card-footer-item" %>
            </footer>
          <% end %>
          <div class="columns">
            <div class="column is-5 is-offset-0">
              <article class="panel is-success">
                <p class="panel-heading">
                  Ingredients needed for preparing
                </p>
                <p class="panel-tabs">
                  <% recipe.ingredients.each do |ingredient| %>
                    <ul>
                      <li>
                        <%= ingredient.body %>
                      </li>
                    </ul>
                  <% end %>
                </p>
                <% if current_user %> 
                  <footer class="card-footer">
                    <%= link_to "Edit/Delete ingredientss", recipe_edit_ingredients_path(recipe), class: "card-footer-item" %>
                  </footer>
                <% end %>
              </article>
            </div>
                
            <div class="column is-5 is-offset-2">
              <article class="panel is-success">
                <p class="panel-heading">
                  Instructions for preparing
                </p>
                <p class="panel-tabs">
                  <% recipe.instructions.each do |instruction| %>
                    <ul>
                      <li>
                        <%= instruction.body %>
                      </li>
                    </ul>
                  <% end %>
                </p>
                <% if current_user %> 
                  <footer class="card-footer">
                    <%= link_to "Edit/Delete instructions", recipe_edit_instructions_path(recipe), class: "card-footer-item" %>
                  </footer>
                <% end %>
              </article>
            </div>
          </div>
        <% else %>
          <%= link_to "Show", user_recipe_path(recipe.user, recipe), class: "card-footer-item" %>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>



      


 
        

