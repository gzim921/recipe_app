<%= form_with model: model, local: true do |form| %>
  <div class='container'>
    <h1 class="title"><%= heading if local_assigns[:nested_form] %></h1>
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-12">
          <% unless local_assigns[:nested_form] %>
            <%= form.label :user_name, class: "sr-only " %>
            <%= form.text_field :user_name, class: "input", placeholder: "Full name" %>
            <%= form.label :first_name, class: "sr-only" %>
            <%= form.text_field :first_name, class: "input", placeholder: "First name" %>
            <%= form.label :last_name, class: "sr-only" %>
            <%= form.text_field :last_name, class: "input", placeholder: "Last name" %>
            <%= form.label :email, class: "sr-only" %>
            <%= form.email_field :email, class: "input", placeholder: "Email adress" %>
            <%= form.label :password, class: "sr-only" %>
            <%= form.password_field :password, class: "input", placeholder: "Password" %>
            <%= form.label :password_confirmation, class: "sr-only" %>
            <%= form.password_field :password_confirmation, class: "input", placeholder: "Confirm password" %>
          <% else %>
            <%= render 'components/errors', model: model %>
            <div class="field">
              <label class="label">
                <%= form.label :title, class: "sr-only" %>
                <%= form.text_field :title, class: "input", placeholder: "Title" %>
              </label>
            </div>
            <div class="field">
              <label class="label">
                <%= form.label :description, class: "sr-only" %>
                <%= form.text_area :description, class: "textarea", placeholder: "Description" %>
              <label>
            </div>
            <h1 class="title">Ingredient</h1>
            <div class="field">
              <label class="label">
                <%= render "components/ingredients", form: form %>
              </label>
            </div>
            <h1 class="title">Instruction</h1>
            <div class="field">
              <label class="label">
                  <%= render "components/instructions", form: form %>
              </label>
            </div>
          <% end %>
          <%= form.submit button_name, class: "button is-link is-light"%>
        </div>
      </div>
    </div>
  </div>
<%end%>